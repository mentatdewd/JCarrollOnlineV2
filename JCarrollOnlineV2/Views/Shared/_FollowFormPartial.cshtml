@using Microsoft.AspNet.Identity
@using JCarrollOnlineV2.ViewModels
@using JCarrollOnlineV2
@model UserDetailViewModel

@{
    if (Model.UserStatsVM.UserFollowers.Users.Exists(x => x.User.Id == Model.UserInfoVM.UserId) == true)
    {
        @Html.Partial("_UnfollowPartial", Model.UserInfoVM)
    }
    else
    {
        @Html.Partial("_FollowPartial", Model.UserInfoVM)
    }
}
