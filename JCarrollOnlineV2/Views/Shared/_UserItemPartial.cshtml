@using JCarrollOnlineV2.ViewModels.Users
@model UserItemViewModel

<li lang="en">
    <div class="user_item">
        <a href='@Url.Action("Details", "Users", new { userId = Model.User.Id })'>
            @{
                @Html.Gravatar(Model.User.Email, 52, new { Title = "My Gravatar", Alt = "Gravatar" });
            }
        </a>
        <span>
            @Html.ActionLink(Model.User.UserName, "Details", new { userId = Model.User.Id })
        </span>

        @if (User.IsInRole("Administrator"))
        {
            @Html.Raw(" | ")
            <span>
                @Html.ActionLink("Delete", "DeleteUser", "Account", new { userId = Model.User.Id }, new { @class = "delete-link" })
            </span>
        }
    </div>
</li>