@using JCarrollOnlineV2.ViewModels.MicroPosts
@using PagedList
@using PagedList.Mvc
@model MicroPostFeedViewModel

@if (Model.MicroPostFeedItems != null)
{
    <ul class="micropostfeed">
        @foreach (MicroPostFeedItemViewModel micropost in Model.OnePageOfMicroPosts)
        {
            @Html.Partial("_MicroPostFeedItemPartial", micropost)
        }
    </ul>
    @Html.PagedListPager((IPagedList)Model.OnePageOfMicroPosts, page => Url.Action("Index", new { microPostPage = page }))
}
