@using JCarrollOnlineV2.ViewModels.MicroPosts
@model MicroPostFeedItemViewModel

<li class="micropost">
    <span class="gravatar">
        <a href='@Url.Action("Details", "Users", new { userId =  Model.Author.Id })'></a>
        @{
            @Html.Gravatar(Model.Author.Email, 52, new { @class = "gravatar", Title = "My Gravatar", Alt = "Gravatar" })
        }
    </span>
    <div class="micropost">
        <span class="user">
            @Html.ActionLink(@Model.Author.UserName, "Details", new { userId = Model.Author.Id })
        </span>


        <span class="content">
            @Model.Content
        </span>
        <span class="timestamp">
            Posted <span data-livestamp="@Model.TimeAgo"></span>
        </span>
    </div>
</li>