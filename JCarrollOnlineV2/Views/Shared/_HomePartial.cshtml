@using JCarrollOnlineV2.ViewModels.Home
@model HomeViewModel

<div class="container">
    <div class="row" xmlns="http://www.w3.org/1999/html">
        <aside class="col-md-4">
            <section>
                @Html.Partial("_UserInfoPartial", Model.UserInfoViewModel)
            </section>
            <section>
                @Html.Partial("_UserStatsPartial", Model.UserStatsViewModel)
            </section>
            <section>
                @Html.Partial("_MicroPostFormPartial", Model.MicroPostCreateViewModel)
            </section>
            <section>
                @Html.Partial("_ChatPartial", Model.ChatViewModel)
            </section>
        </aside>
        <div class="col-md-5">
            <h2>Micro-Posts</h2>
            @Html.Partial("_MicroPostFeedPartial", Model.MicroPostFeedViewModel)

            <!-- Latest Forum Threads Section -->
            <div style="margin-top: 20px;">
                @Html.Partial("_LatestForumThreadsPartial", Model.LatestForumThreadsViewModel)
            </div>
        </div>
        <aside class="col-md-3">
            @Html.Partial("_RssFeedPartial", Model.RssFeedViewModel)
        </aside>
    </div>
    <hr />
    <div class="col-md-12">
        <div class="blogFeed">
            <h1>Blog</h1>
            @Html.Partial("_BlogFeedPartial", Model.BlogFeed)
        </div>
    </div>
</div>