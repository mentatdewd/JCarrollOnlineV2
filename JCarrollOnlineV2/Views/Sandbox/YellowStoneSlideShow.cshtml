@using JCarrollOnlineV2.ViewModels.Sandbox
@model YellowstoneViewModel

@{
    Model.PageTitle = "Yellowstone Slide Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>YellowStoneSlideShow</h2>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src=@Model.ImageFiles.FirstOrDefault().Path alt=@Model.ImageFiles.FirstOrDefault().AltString />
            <div class="carousel-caption">
                <h3>Arrival in Yellowstone City</h3>
                <p>The day of our arrival Ally went shopping</p>
            </div>
        </div>
        @foreach (var image in Model.ImageFiles.Skip(1))
        {
            @Html.Raw("<div class='carousel-item'>")
            @Html.Raw("<img src='")
            @image.Path
            @Html.Raw("' alt='")
            @image.AltString
            @Html.Raw("' />");
            @Html.Raw("</div>")
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

